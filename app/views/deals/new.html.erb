<!-- app/views/deals/new.html.erb -->
<h1>Add a New Deal</h1>

<%= form_with model: [@group, @deal], url: group_deals_path(@group) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount %>
  </div>
  <%= form.submit 'Create Deal' %>
<% end %>

<%= link_to 'Back', group_deals_path(@group) %>
