<h1>Group Page</h1>

<div class="group">
  <h2><%= @group.name %></h2>
  <p>Icon: <%= @group.icon %></p>
</div>

<p>Total Amount: <%= number_to_currency(@total_amount) %></p>

<ul>
  <% @deals.each do |deal| %>
    <li>
      <%= deal.name %> - <%= number_to_currency(deal.amount) %> - <%= deal.created_at.strftime('%Y-%m-%d') %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add a New Deal', new_group_deal_path(@group) %>
<%= link_to 'Back', groups_path %>
