<div class="splash2">
  <div class="top-strip2">
    <%= button_to 'Sign Out', destroy_user_session_path, class:"signout-link", method: :delete %>
    <h2>CATEGORIES</h2>
  </div>
<% @groups.each do |group| %>
  <div class="group-container">
    <div class="group-element">
      <img src="<%= group.icon %>" class="no-underline group-image">
    </div>
    <%= link_to group_deals_path(group), class:"group-link group-element" do %>
      <p><%= group.name %></p>
    <% end %>
    <p class="group-element"><%= number_to_currency(group.deals.where(author: current_user).sum(:amount)) %></p>
  </div>
<% end %>
<%= link_to 'Add a New Category', new_group_path, class:'new-category-link'%>
