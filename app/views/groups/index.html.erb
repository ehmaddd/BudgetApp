<h1>Group Page</h1>

<% @groups.each do |group| %>
  <div class="group">
    <h2><%= group.name %></h2>
    <p>Icon: <%= group.icon %></p>
    <p>Total Amount of Deals: <%= group.deals.sum(:amount) %></p>
    <%= link_to 'View Deals', group_deals_path(group) %>
  </div>
<% end %>

<%= link_to 'Add a New Group', new_group_path %>
<%= button_to 'Sign Out', destroy_user_session_path, method: :delete %>
