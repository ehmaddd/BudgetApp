<!-- app/views/groups/show.html.erb -->
<h1><%= @group.name %></h1>

<p>Total Amount: <%= @total_amount %></p>

<h2>Deals</h2>
<ul>
  <% @deals.each do |deal| %>
    <li>
      Amount: <%= deal.amount %>, Date: <%= deal.created_at %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a New Deal", new_group_deal_path(@group) %>
<% if user_signed_in? %>
  <%= link_to "Back", authenticated_root_path %>
<% else %>
  <%= link_to "Back", unauthenticated_root_path %>
<% end %>
